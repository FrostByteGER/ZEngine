<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
	<ApplicationIcon>ZENgine.ico</ApplicationIcon>
	<Platforms>x64</Platforms>
  </PropertyGroup>
  
  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|x64'">
    <PlatformTarget>x64</PlatformTarget>
  </PropertyGroup>
  
  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="robocopy &quot;$(SolutionDir)$(ProjectName)\Lib&quot; &quot;$(TargetDir)\&quot; /COPY:DAT /DCOPY:T /E&#xD;&#xA;if %2525errorlevel%2525 leq 3 exit 0 else exit %2525errorlevel%2525" />
  </Target>
  
  <ItemGroup>
    <Compile Update="EngineInfo.Designer.cs">
      <AutoGen>True</AutoGen>
      <DesignTimeSharedInput>True</DesignTimeSharedInput>
      <DependentUpon>EngineInfo.settings</DependentUpon>
    </Compile>
  </ItemGroup>
  
  <ItemGroup>
    <None Include="App.config" />
    <None Include="Assets\Config.cfg" />
    <None Include="Assets\Packages.cfg" />
    <None Update="EngineInfo.settings">
      <Generator>PublicSettingsSingleFileGenerator</Generator>
      <LastGenOutput>EngineInfo.Designer.cs</LastGenOutput>
    </None>
  </ItemGroup>
  
  <ItemGroup>
    <Content Include="Lib\OpenAL32.dll" />
    <Content Include="ZENgine.ico" />
  </ItemGroup>
  
  <ItemGroup>
    <Folder Include="Assets\Levels\" />
    <Folder Include="Engine\Audio\" />
  </ItemGroup>
  
  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
    <PackageReference Include="Silk.NET" Version="1.0.0-preview5" />
    <PackageReference Include="System.Data.SQLite.Core" Version="1.0.112" />
  </ItemGroup>
  
  <ItemGroup>
    <Reference Include="VelcroPhysics">
      <HintPath>Lib\VelcroPhysics.dll</HintPath>
      <Private>true</Private>
    </Reference>
  </ItemGroup>
  
</Project>